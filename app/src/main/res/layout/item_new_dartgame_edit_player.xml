<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/bigPadding"
    android:paddingVertical="@dimen/standardPadding">

    <com.example.eloem.dartCounter.helperClasses.BetterEditText
        android:id="@+id/playerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="20"
        android:inputType="textCapSentences|textMultiLine"
        android:background="@android:color/transparent"
        android:textSize="@dimen/standardTextSize"
        android:textColor="?attr/colorOnBackground"
        android:hint="@string/newPlayer" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/round_button_background"
        android:padding="@dimen/standardPadding"
        android:src="@drawable/ic_clear" />

</LinearLayout>
